{
  "config" : "./config",
  "env" : {
    "development" : {
      "logger" : {
        "level"  : "debug",
        "rotate" : {
          "path" : "./logs",
          "name" : "<%= name %>.log"
        }
      }
    },
    "staging" : {
      "logger" : {
        "level"  : "info",
        "rotate" : {
          "path" : "/var/log",
          "name" : "<%= name %>.log"
        }
      }
    },
    "production" : {
      "logger" : {
        "level"  : "info",
        "rotate" : {
          "path" : "/var/log",
          "name" : "<%= name %>.log"
        }
      }
    }
  }
}